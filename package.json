{
  "name": "react-type-check",
  "version": "0.1.0-rc.3",
  "description": "Type checking utilities for React elements.",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": "git@github.com/flextremedev/react-type-check.git",
  "author": "Pascal Wegner <flextremedev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "check-types": "tsc --noEmit",
    "test-types": "yarn run check-types --project ./testing/tsconfig.test.json",
    "test": "jest -c ./testing/jest.config.js",
    "test:cov": "yarn run test --coverage",
    "validate": "concurrently \"yarn run eslint . --quiet --ext .js\" \"yarn run check-types\" \"yarn run test-types\""
  },
  "peerDependencies": {
    "react": ">=16.8.0 < 17"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/react": "^16.9.35",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "concurrently": "^5.2.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.7",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
